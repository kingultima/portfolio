<%= form_with(model: hospital, local: true) do |form| %>
<% if hospital.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(hospital.errors.count, "error") %> prohibited this hospital from being saved:</h2>

  <ul>
    <% hospital.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<form>
  <div class="field form-group">
    <%= form.label "病院名" %>
    <%= form.text_field :name, class: "form-control", placeholder: "病院名" %>
  </div>

  <div class="field form-group">
    <label>診療対象動物</label><br>
    <% pets = ["犬","猫","うさぎ","鳥","フェレット","ハムスター","モルモット","リス","両生類","爬虫類","魚類"] %>
    <% pets.each do |pet| %>
    <%= form.check_box :pet , {multiple: true}, pet, nil %>
    <%= form.label :pet, pet %>
    <% end %>
  </div>

  <div class="field form-group">
    <label>診療日</label><br>
    <% days = ["月","火","水","木","金","土","日","祝"] %>
    <% days.each do |day| %>
    <%= form.check_box :day , {multiple: true}, day, nil %>
    <%= form.label :day, day %>
    <% end %>
  </div>

  <div class="field form-group">
    <%= form.label :tel %>
    <%= form.text_field :tel, class: "form-control", placeholder: "ハイフンなし数字を入力" %>
  </div>

  <div class="field form-group">
    <%= form.label :caption %>
    <%= form.text_area :caption, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label "住所" %>
    <%= form.text_field :address, class: "form-control", placeholder: "住所" %>
  </div>

  <div class="field form-group">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, class: "form-control", placeholder: "緯度" %>
  </div>

  <div class="field form-group">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, class: "form-control", placeholder: "経度" %>
  </div>

  <div class="actions form-group">
    <%= form.submit "create/update" , class: "btn btn-primary" %>
  </div>
  <% end %>

</form>