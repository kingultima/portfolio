<div class="row">
    <p id="notice">
        <%= notice %>
    </p>
    <h1>病院一覧</h1>

    <%= search_form_for @search  do |f| %>
    <div class="search-box background-content">
        <h2 class="hos-mb-50">病院検索</h2>
        <div class="form-group">
            <%= f.label :name_cont %>
            <%= f.text_field :name_cont, class: "form-control" %>
        </div>

                <div class="form-group">
            <%= f.label :address_cont %>
            <%= f.text_field :address_cont, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>診療対象動物</label><br>
            <%= f.collection_radio_buttons :pets_id_in, Pet.all, :id, :name %>
        </div>

        <div class="field form-group">
            <label>診療日</label><br>
            <% days = ["月","火","水","木","金","土","日","祝"] %>
            <% days.each do |day| %>
            <%= f.check_box :day , {multiple: true  }, day, nil %>
            <%= f.label :day, day %>
            <% end %>
        </div>

        <div class="actions"><%= f.submit "Search", class: "btn btn-secondary btn-block" %></div>
        <% end %>
    </div>

    <% if @result.any? %>
    <table class="table table-striped background-content" >
        <thead>
            <tr>
                <th class="col-sm-2">病院名</th>
                <th class="col-sm-2">診療日</th>
                <th class="col-sm-2">診療時間</th>
                <th class="col-sm-2">住所</th>
                <th class="col-sm-2">診療動物</th>
                <th class="col-sm-1"></th>
                <th class="col-sm-1"></th>
            </tr>
        </thead>
        <tbody>
            <% @result.each do |result| %>
            <tr>
                <td>
                    <%= result.name %>
                </td>
                <td>
                    <%= result.day %>
                </td>
                <td>
                    <% result.practice_times.each do |time| %>
                    <%= time.start_time.to_s(:time) %> ～
                    <%= time.end_time.to_s(:time) %><br>
                    <% end %>
                </td>
                <td>
                    <%= result.address %>
                </td>
                <td>
                    <% result.pets.each do |pet| %>
                    <%= pet.name %>
                    <% end %>
                </td>
                <td>
                    緯度：<%= result.latitude %><br>
                    経度：<%= result.longitude %>
                </td>
                <td>
                    <%= link_to '詳細', result, class: "btn btn-warning btn-block" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <% end %>

    <% if @result.nil? %>
    <ul class="users">
        <%= render @hospitals %>
    </ul>
    <% end %>

    <div class="col-xs-12 hos-button">
      <% if user_signed_in? %>
      <%= link_to '病院を追加する', new_hospital_path %>
      <span>|</span>
      <%= link_to 'マップ一覧', maps_path %>
      <% else %>
      <%= link_to 'マップ一覧', maps_path %>
      <% end %>
  </div>

</div>