<div class="row">
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 background-content">
    <p id="notice"><%= notice %></p>

    <h2><%= @hospital.name %></h2>

    <div class="col-xs-offset-2 col-xs-10 col-sm-offset-0 col-sm-6">
      <%= attachment_image_tag @hospital, :hospital_image, :fill, 250, 250, format: 'jpeg', fallback: "/images/noimage2.png", :size => "250x250" %>
    </div>

    <div class="col-xs-10 col-sm-6">
    <p>
      <span class="badge badge-pill badge-primary">住所</span><br>
      <%= @hospital.address %>
    </p>

    <p>
      <span class="badge badge-pill badge-primary">TEL</span><br>
      <%= @hospital.tel %>
    </p>

        <p>
      <span class="badge badge-pill badge-primary">診療日</span><br>
      <%= @hospital.day %>
    </p>

    <p>
      <span class="badge badge-pill badge-primary">診療時間</span><br>
      <% @practice_time.each do |time| %>
      <%= time.start_time.to_s(:time) %> ～
      <%= time.end_time.to_s(:time) %><br>
      <% end %>
    </p>

    <p>
      <span class="badge badge-pill badge-primary">ペット種別</span><br>
      <%= @hospital.pet %>
    </p>

  </div>

    <%= link_to 'Edit', edit_hospital_path(@hospital) %> |
    <%= link_to 'Back', hospitals_path %>

    <div class="col-xs-12">
      <div id="map" style='height: 500px;'></div>
    </div>
    <script>
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(15);
      });
    </script>

  </div>
</div>