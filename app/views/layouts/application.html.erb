<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portfolio</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pretty-checkbox@3.0/dist/pretty-checkbox.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pretty-checkbox@3.0/dist/pretty-checkbox.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="//maps.google.com/maps/api/js?key=AIzaSyCvtHHxeUnGwM1eHb9OH3Vn5tGsuzmN5Ls"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
</head>

<body class="background">

  <!-- ハンバーガーアイコン -->
  <div class="menu-icon" onclick="this.classList.toggle('hover');Drop(0)">
    <div class="menu-bar menu-bar1"></div>
    <div class="menu-bar menu-bar2"></div>
    <div class="menu-bar menu-bar3"></div>
  </div>

  <% if user_signed_in? %>
  <div class="menu">
    <div class="menu-con" style="background:#FF0039;"><p>HOME</p></div>
    <div class="menu-con" style="background:#8542a7;"><%= link_to "HOSPITAL", hospitals_path %></div>
    <div class="menu-con" style="background:#339414;"><p>SEARCH</p></div>
    <div class="menu-con" style="background:#2780E3;"><a href="#">ABOUT</a></div>
    <div class="menu-con" style="background:#252728;">
      <%= link_to "SIGN-OUT", destroy_user_session_path, method: :delete %>
    </div>
  </div>
  <% else %>
  <div class="menu">
    <div class="menu-con" style="background:#FF0039;"><p>HOME</p></div>
    <div class="menu-con" style="background:#8542a7;"><%= link_to "HOSPITAL", hospitals_path %></div>
    <div class="menu-con" style="background:#339414;"><p>SEARCH</p></div>
    <div class="menu-con" style="background:#2780E3;"><a href="#">ABOUT</a></div>
    <div class="menu-con" style="background:#252728;">
      <%= link_to "SIGN-IN", new_user_session_path %>
    </div>
  </div>
  <% end %>

  <!-- 固定ナビ -->


  <div class="container">
    <%= yield %>
  </div>
</body>

</html>