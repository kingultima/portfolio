<br>
<div class="row">
  <div class="col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6 background-content">

    <h2 class="text-center">ログイン</h2>
    <br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    <%- end -%>

    <form>
      <div class="field form-group device-form">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "例：example@example.com" %>
      </div>

      <div class="field form-group device-form">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワードを入力" %>
      </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field form-group device-form">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
    <br>

    <%= f.button fa_icon("sign-in", text: "ログイン"), class: "submit-button center-block" %>
    <% end %>
    <br>
    </form>

    <div class="device-form">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>