<div class="row">
  <div class="col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6 background-content">

    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    <%- end -%>

    <form>
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "例：example@example.com" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワードを入力" %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <%= f.button fa_icon("sign-in", text: "ログイン"), class: "submit-button center-block" %>
      <% end %>

      <div style="margin-top: 20px;">
      <%= render "devise/shared/links" %>
    </div>
    </form>
  </div>
</div>